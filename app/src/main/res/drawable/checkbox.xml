<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- Black fill when checked -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- Black border -->
            <size android:width="14dp" android:height="14dp"/> <!-- Adjust size -->
        </shape>
    </item>

    <!-- Unchecked state -->
    <item >
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White fill when unchecked -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- Black border -->
            <size android:width="14dp" android:height="14dp"/> <!-- Adjust size -->
            <corners android:radius=".1dp"/>
        </shape>
    </item>

</selector>
