<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="20dp">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo"
        android:contentDescription="App Logo" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to WildEvents! ðŸŽ‰"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_below="@id/logoImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover amazing events, connect with your community, and never miss out on the fun!"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_below="@id/welcomeText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/featuresLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/subtitleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ… Explore trending events"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ… Filter events by type for easy discovery"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ… Seamlessly RSVP and stay updated"
            android:textSize="14sp"
            android:textColor="#444444" />
    </LinearLayout>

    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Get Started"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/featuresLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_background"/>

</RelativeLayout>
